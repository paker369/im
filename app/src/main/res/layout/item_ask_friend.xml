<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/portraitImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/mandefult" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="wfc"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/introTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="对方请求添加你为朋友"
                android:textColor="#807E7E"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/acceptStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="已添加"
            android:textColor="@color/black"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/acceptnonoButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="46dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_new_friend_noagree"
            android:text="拒绝"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/acceptButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="46dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_new_friend_agree"
            android:text="接受"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
    </LinearLayout>

<!--    <View-->
<!--        android:id="@+id/dividerLine"-->
<!--        style="@style/Line"-->
<!--        android:layout_marginLeft="76dp"-->
<!--        android:visibility="visible" />-->
</LinearLayout>